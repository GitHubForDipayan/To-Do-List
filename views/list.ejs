<%- include("header") -%>

    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box">

        <% for(var i=0; i < listItems.length; i++) { %>
            <div class="item">
                <input type="checkbox">
                <p>
                    <%= listItems[i] %>
                        <p></p>
            </div>

            <% } %>
    </div>

    <div class="box">
        <form class="item" action="/" method="post">

            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="buttonOfList" value= <%= listTitle %> > + </button>

        </form>
    </div>

<%- include("footer") -%>